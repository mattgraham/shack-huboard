<h5>Members

{{#if displayShowMore }}
  {{#if shouldShowMore }}
    <a href="#" {{action toggleShowMode "less"}}> (less)</a>
  {{else}}
    <a href="#" {{action toggleShowMode "more"}}> (more)</a>
  {{/if}}
{{/if}}

</h5>
<div class="assignees filters">
  {{#each filter in filters}}
    {{view App.AssigneeFilterView lastClicked=controller.lastClicked assignee=filter.avatar.login data-assignee=filter.avatar.login  gravatarUser=filter.avatar content=filter mode=filter.mode }}
  {{/each}}
</div>
